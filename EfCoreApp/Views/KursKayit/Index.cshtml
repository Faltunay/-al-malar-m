@model IEnumerable<EfCoreApp.Models.Data.KursKayit>

    <h2>Kayıt Listesi</h2>
    <a asp-action="Create" class="btn btn-primary">Kayıt Ekle</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.Ogrenci.AdSoyad)</th>
                <th>@Html.DisplayNameFor(m => m.Kurs.Baslik)</th>
                <th style="width: 150px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Ogrenci.AdSoyad)</td>
                    <td>@Html.DisplayFor(modelItem => item.Kurs.Baslik)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.KursKayitId" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.KursKayitId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    